@import 'nib'
@import './slide'
@import './font'

// GENERIC
global-reset()
reset-html5()
lightcolor #FFF
darkcolor #000


html, body
	overflow hidden
	font-family 'DB', sans-serif
	// background red
	min-height 100%
	// background #000
#root, html, body
	height 100%

.app
	position absolute
	height 100%
	width: 100%
	background-color #000
	background-image url(../img/intro-background.jpg)
	background-size: cover
	&__nav
		position absolute
		top 80px
		left 115px
		z-index 2
	&__navinside
		li
			display inline
			margin-right 20px
			&:last-child
				a
					font-family: 'L', sans-serif
			a
				font-family 'DB', sans-serif
				font-size 20px
				text-decoration none
				color #fff
		.active::before
			content ''
			position: absolute
			display inline
			height: 20px
			width: 20px
			background-image url(../img/menu.png)
			background-size cover
			margin-left -25px

	&__intro
		position relative
		top 50%
		max-width 600px
		margin 0 auto
		text-align center
		&--text
			font-family 'DB', sans-serif
			text-align center
			color #fff
			font-size 20px
			line-height 26px
			font-weight bold
			text-transform uppercase
		#showMap
			margin-top 20px
			padding 10px 20px
			border-radius 20px
			font-family 'DB', sans-serif
			font-size 18px
	&__sound
		position absolute
		bottom 20px
		right 20px
		&.mutedSound
			opacity: 0.4
	&__soundBar
		display inline-block
	&__headset
		display inline-block
		margin-left 10px
						
.slideUp
	transform translateY(-200%)
	transition transform 1s cubic-bezier(0.77,0.2,0.05,1.0)
	
.app__map
	float right
	position absolute
	top 50%
	right 0
	transform translate3D(200%,-50%,0)
	margin-right 50px
	transition transform 1.4s cubic-bezier(0.77,0.2,0.05,1.0)
	
	&.active
		transform translate3D(0%,-50%,0)
	.path
		opacity 0.4
		&.clicked
			opacity 1

#panel
	position absolute
	width 100%
	height 100%
	top 0
	background #000000
	transform translateX(-200%)
	transition transform 1s cubic-bezier(0.77,0.2,0.05,1.0)
	z-index 0
	&.show
		transform none
		z-index 1
	&__wrapper
		max-width 1070px
		margin 0 auto
		position relative
		display table
		top: 50%
		transform translateY(-50%)
		margin-top 50px
		color #ffffff
		@media screen and (max-width: 768px)
			padding 0 10px
	a
		position absolute
		top 80px
		left 115px
		color #ffffff
		text-decoration none
	.align
		&__left
			display table-cell
			width 25%
			font-size 50px
			font-family sans-serif
			line-height 56px
			vertical-align top
			text-transform uppercase
			@media screen and (max-width: 768px)
				display block
				width 100%
		&__right
			display table-cell
			padding 0 150px
			font-family "CM",serif
			font-size 20px
			@media screen and (max-width: 768px)
				display block
				padding 0
				margin-top 50px
			strong
				display block
				margin-bottom 20px
			p
				margin-bottom 50px;
				opacity 0.8
			small
				opacity 0.8
				font-size 15px