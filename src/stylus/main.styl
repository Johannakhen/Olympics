@import 'nib'
@import './slide'
@import './font'

// GENERIC
global-reset()
reset-html5()
lightcolor #FFF
darkcolor #000


html, body
	overflow hidden
	font-family 'DB', sans-serif
	// background red
	min-height 100%
	// background #000
#root, html, body
	height 100%

.app
	position relative
	height 100%
	background-color #000
	background-image url(../img/intro-background.jpg)
	background-size: cover
	&__nav
		position absolute
		top 80px
		left 115px
		z-index 1
	&__navinside
		li
			display inline
			margin-right 20px
			&:last-child
				a
					font-family: 'L', sans-serif
			a
				font-family 'DB', sans-serif
				font-size 20px
				text-decoration none
				color #fff
		.active::before
			content ''
			position: absolute
			display inline
			height: 20px
			width: 20px
			background-image url(../img/menu.png)
			background-size cover
			margin-left -25px

	&__intro
		position relative
		top 50%
		max-width 600px
		margin 0 auto
		&--text
			font-family 'DB', sans-serif
			text-align center
			color #fff
			font-size 20px
			line-height 26px
			font-weight bold
			text-transform uppercase

.app__map
	float right
	position relative
	top 50%
	transform translateY(-50%)
	margin-right 50px
	.path
		opacity 0.4

#panel
	position absolute
	width 100%
	height 100%
	top 0
	background #000000
	transform translateX(-200%)
	transition transform 1s cubic-bezier(0.77,0.2,0.05,1.0)
	z-index 0
	&.show
		transform none
	&__wrapper
		max-width 1200px
		margin 0 auto
		position relative
		display table
		top: 50%
		transform translateY(-50%)
		color #ffffff
		@media screen and (max-width: 768px)
			padding 0 10px
	a
		position absolute
		top 80px
		left 115px
		color #ffffff
		text-decoration none
	.align
		&__left
			display table-cell
			width 22%
			font-size 50px
			font-family "DB",serif
			line-height 26px
			vertical-align top
			@media screen and (max-width: 768px)
				display block
				width 100%
		&__right
			display table-cell
			padding-left 50px
			font-family "CM",serif
			font-size 20px
			@media screen and (max-width: 768px)
				display block
				padding-left 0
				margin-top 50px
			strong
				display block
				margin-bottom 20px
			p
				margin-bottom 50px;
				opacity 0.8
			small
				opacity 0.8
				font-size 15px