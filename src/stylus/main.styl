@import 'nib'
@import './slide'

// GENERIC
global-reset()
reset-html5()
lightcolor #FFF 
darkcolor #000


html, body
	width 100%
	height 100%
	overflow hidden
	min-height 100%
	background #000

.app 
	position relative
	&__nav 
		position absolute
		top 80px
		left 115px
	&__navinside 
		li
			display inline
			margin-right 20px
			a
				text-decoration none
				color #fff

